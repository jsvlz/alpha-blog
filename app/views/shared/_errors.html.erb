
<% if obj.errors.any? %>
  <div class = "col-xs-8 col-xs-offset-2">
    <div class= "alert alert-danger">
       <strong>
        <%= pluralize(obj.errors.count, "error") %>
        prohibited this article from being saved:
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </strong>
    </div>
  </div>
<% end %>
